<% include ./partials/header %>
<script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=o54cags3br9gbwsw3rjtl3vwud8lspc9l9v8inpolz7weryg"></script>
  <script>tinymce.init({ selector:'textarea' });</script>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.source %>">
        </div>
        <div class="field">
            <textarea name="blog[body]"><%- blog.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<% include ./partials/footer %>